<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_settings_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="de.devmil.paperlaunch.SettingsActivity">

    <Button
        android:id="@+id/activity_settings_buttontest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_settings_entrieslist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_settings_buttontest"
        android:clipToPadding="false"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical"
        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/activity_settings_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/ic_add_black_24dp"
        android:layout_margin="6dp"
        app:elevation="4dp">

    </android.support.design.widget.FloatingActionButton>
</RelativeLayout>
